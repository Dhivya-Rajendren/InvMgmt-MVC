@model IEnumerable<InvMgmt_MVC.Models.Product>

    <a asp-action="Create" class="btn btn-info m-2">Create New</a>

    <br/>


    @if(Model.Count()==0)
{
    <p class="btn btn-warning">No products Found</p>
}

else
{
<div class="card-group">
   
       @foreach(var product in Model)
       {
    <div class="card col-sm-3">
        <div class=card-header>
            @product.ProductName
        </div>
        <div class="card-body">
            <h5>@product.Category</h5>
            <h5>@product.AvailableQty</h5>
            <h5>@product.UnitPrice</h5>
            </div>
            <div class="card-footer">

                <a asp-action="Details" class="btn btn-warning" asp-route-productId=@product.ProductId>Details</a>
                        <a asp-action="" class="btn btn-primary"  asp-route-productId=@product.ProductId>Edit</a>
                <a asp-action="Delete" class="btn btn-danger"  asp-route-productId=@product.ProductId>Delete</a>

                </div>

    </div>
       }
     
</div>
}
